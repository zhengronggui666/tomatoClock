/* components/me/me.wxss */
@import "/colorui/main.wxss";
@import "/colorui/icon.wxss";
.dialog{
  width: 250px;
}
.themeContent{
  height: 128px;
  /* width: 100%; */
  display: flex;
  flex-wrap: wrap;
  padding-left: 8px;
  padding-top: 8px;
  padding-right: 2px;
}
.btContent{
  display: block;
  height: 60px;
  width: 60px;
  align-items: center;
  
}
.themebt{
 
  height: 50px;
  width: 50px;
  text-align: center;
  line-height: 60px;
  font-size:18px;
  border-radius: 50%;
  border:1px wheat solid;
}
.scroll{
 height: 100%;
  overflow: scroll;
}
.cardlist{
  margin-bottom: 60px;
}
.UCenter-bg {
  /* background-image: url(https://image.weilanwl.com/color2.0/index.jpg); */
  background-size: cover;
  height: 550rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  width: 750rpx;
  height: 300rpx;
}
